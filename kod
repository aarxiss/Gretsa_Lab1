код:

#include <iostream>
#include <Windows.h>
using namespace std;

int main() {
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int a, b, c;

  
    cout << "Введіть три числа: ";
    cin >> a >> b >> c;

  
    int max_num = a;

    if (b > max_num)
        max_num = b;

    if (c > max_num)
        max_num = c;


    cout << "Найбільше число:" << max_num;

    return 0;
}
